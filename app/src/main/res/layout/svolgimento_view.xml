<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="match_parent"

    android:layout_marginTop="5dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">


        <TextView

            android:id="@+id/nome_esercizio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="46dp"
            android:layout_marginRight="46dp"
            android:layout_toStartOf="@+id/arrow_expand_imageview"
            android:layout_toLeftOf="@+id/arrow_expand_imageview"
            android:text="Riconosci immagine: balenaa"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />



        <ImageView android:id="@+id/stelle"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/star"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/corretto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nome_esercizio"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="svolto correttamente" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/linearLayout"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="50dp"
    android:background="@color/bg_intro_slide1"
    >

    <ImageView
        android:id="@drawable/icon_code_patient"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/icon_bulb"
        app:srcCompat="@drawable/icon_code_patient" />

    <RelativeLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:padding="15dp">

        <android.support.v7.widget.CardView
            android:id="@+id/desc_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">


            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_below="@+id/desc_cardview"
                android:background="@color/bg_intro_slide1"
                android:padding="8dp"
                android:text="@string/insert_doctor_code"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="@dimen/slide_desc" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/doctor_code_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">

            <EditText
                android:id="@+id/doctor_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doctor_code_cardview"
                android:background="@android:color/white"
                android:hint="@string/hint_code"
                android:padding="8dp"
                android:textSize="14sp" />
        </android.support.v7.widget.CardView>


        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/action_next"
            android:textColor="@android:color/white" />

    </RelativeLayout>


</LinearLayout>